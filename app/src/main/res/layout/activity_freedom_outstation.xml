<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlightblue"
    android:orientation="vertical"
    tools:context=".FreedomOutstationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_170sdp"
        android:orientation="vertical"
        android:background="@drawable/bottomradius_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="Back" />

            <ImageView
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:src="@drawable/bell_icon"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_28sdp"
                android:layout_gravity="center"
                android:src="@drawable/share_icon"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:scaleType="fitXY"
            android:src="@drawable/carfamily"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-36dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardMaxElevation="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_5sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:background="@color/coloryellow"
                    android:scaleType="fitXY" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_21sdp"
                    android:text="one way"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@color/colorcoffie"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_6sdp">
            <LinearLayout
                android:id="@+id/roundtour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:scaleType="fitXY"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_21sdp"
                    android:text="Round/Tour"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@color/colorcoffie"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_9sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:scaleType="fitXY"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_21sdp"
                    android:text="Package"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@color/colorcoffie"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_9sdp">

            <LinearLayout
                android:id="@+id/freedomoneway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:scaleType="fitXY"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_21sdp"
                    android:text="Freedom"
                    android:gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:background="@color/colorcoffie"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_290sdp"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="@dimen/_6sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            app:cardMaxElevation="@dimen/_6sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6sdp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/calendar_month"
                    android:layout_marginStart="@dimen/_6sdp"/>

                <TextView
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/colorcoffie"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="25.06.2022" />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_baseline_watch_later_24"
                    android:layout_marginStart="@dimen/_66sdp"/>

                <TextView
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:backgroundTint="@color/colorcoffie"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:text="06:20 PM" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginTop="@dimen/_41sdp"
                android:layout_marginStart="@dimen/_9sdp"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_9sdp"
                android:background="@drawable/btn_left_corner"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:inputType="text"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="Starting Point"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_86sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_119sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@drawable/btn_left_corner"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:hint="Mobile No."
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/_119sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:background="@drawable/btn_left_corner"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:hint="Member"
                        android:textColor="@color/black" />
                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:hint="Text your massase"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"/>

            </LinearLayout>











            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="bottom"
                android:background="@color/colornavyblue"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Submit"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>






    <ImageView
        android:id="@+id/car"
        android:scaleType="centerCrop"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toTopOf="@+id/bottombuttonbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/figgofooter"/>


</LinearLayout>